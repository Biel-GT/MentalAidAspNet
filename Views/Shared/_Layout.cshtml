<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MentalAid</title>
    <link rel="stylesheet" href="~/Content/site.css" asp-append-version="true" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (Session["usuario"] == null)
                    {
                        @Html.ActionLink("MentalAid", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
                    }
                    else
                    {
                        @Html.ActionLink("MentalAid", "Dashboard", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
                    }
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer text-white">
            <div class="container">
                Créditos: Gabriel Souza Teixeira, José Eduardo Cavalcante, Lucas Lima Teixeira, Mariana Carvalho Silva.
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
